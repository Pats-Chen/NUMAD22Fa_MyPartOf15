<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="50dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_movieTvImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/poster"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_team15_background"
            android:tintMode="src_atop"
            app:tint="#6F000000" />

        <TextView
            android:id="@+id/tv_movieTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_movieTvImage"
            android:layout_alignTop="@id/iv_movieTvImage"
            android:layout_alignEnd="@id/iv_movieTvImage"
            android:layout_alignBottom="@id/iv_movieTvImage"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:text="@string/item_movie_title"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_yearOfRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="168dp"
            android:text="@string/item_year_of_release"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_setYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_yearOfRelease"
            android:layout_marginStart="136dp"
            android:layout_marginTop="168dp"
            android:layout_toEndOf="@+id/tv_imdbId"
            android:text="@string/item_set_year"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_movieTvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="212dp"
            android:text="@string/item_type"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_setType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_movieTvType"
            android:layout_marginStart="50dp"
            android:layout_marginTop="212dp"
            android:layout_toEndOf="@+id/tv_imdbId"
            android:text="@string/item_set_type"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_imdbId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_imdb_id"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="256dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_setImdbID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_imdbId"
            android:layout_marginStart="76dp"
            android:layout_marginTop="256dp"
            android:layout_toEndOf="@+id/tv_imdbId"
            android:text="@string/item_set_imdb_id"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="italic" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>